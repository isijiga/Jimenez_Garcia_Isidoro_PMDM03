<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AjustesFragment">

    <!-- TODO: Update blank fragment layout -->



    <GridLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <TextView
                android:layout_row="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:text="@string/Cerrar_sesion"
                android:layout_column="0"></TextView>
            <Space
                android:layout_width="150dp"
                android:layout_height="20dp"></Space>


            <ImageView

                android:id="@+id/button3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:clickable="true"
                android:gravity="center_vertical"
                android:contentDescription="logout"
                android:src="@drawable/cerrarsesion"
                android:layout_column="1"></ImageView>
        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"></Space>
    <LinearLayout
        android:layout_row="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:text="@string/eliminarPokemon"
            android:layout_column="0"></TextView>
        <Space
            android:layout_width="80dp"
            android:layout_height="20dp"></Space>
        <Switch
            android:layout_column="1"
            android:id="@+id/switch1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            />
    </LinearLayout>
        <LinearLayout
            android:layout_row="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:text="@string/cambiarIdioma"
                android:layout_column="0"></TextView>
            <Space
                android:layout_width="80dp"
                android:layout_height="20dp"></Space>
            <Switch
                android:layout_column="1"
                android:id="@+id/switchLanguage"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_row="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:text="@string/acercade"
                android:layout_column="0"></TextView>
            <Space
                android:layout_width="120dp"
                android:layout_height="20dp"></Space>
            <ImageView
            android:id="@+id/buttonAbout"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:clickable="true"
            android:gravity="center_vertical"
            android:contentDescription="logout"
            android:src="@drawable/baseline_arrow_forward_ios_24"
            android:layout_column="1"></ImageView>
        </LinearLayout>
    </GridLayout>

</FrameLayout>