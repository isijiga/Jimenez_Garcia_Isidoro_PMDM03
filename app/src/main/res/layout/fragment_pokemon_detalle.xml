<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/Theme.PMPM_Tarea3_IJG">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".PokemonDetalleFragment">

        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/detalle_imageview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleX="1"
                android:scaleY="1"

                ></ImageView>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detalle_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="prueba"

                android:theme="@style/DetalleStyle"

                />

            <TextView
                android:id="@+id/detalle_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="type"
                android:theme="@style/Theme.PMPM_Tarea3_IJG" />

            <TextView
                android:id="@+id/detallePeso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="peso"
                android:theme="@style/Theme.PMPM_Tarea3_IJG" />

            <TextView
                android:id="@+id/detalleAltura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="altura" />
        </LinearLayout>
    </LinearLayout>
</layout>